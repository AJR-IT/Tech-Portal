                            <li><hr class="dropdown-divider"></li>
                            <li class="px-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="themeToggleDropdown">
                                    <label class="form-check-label" for="themeToggleDropdown">Dark Mode</label>
                                </div>
                            </li>
