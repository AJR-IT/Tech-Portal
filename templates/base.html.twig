        </div>
    </nav>


    <!-- Main Content -->
    <div class="container-fluid content-wrapper">
        <div class="container py-4">
            <h1>Welcome to Device Tracker</h1>
            <p class="text-muted">Manage devices, assign users, track repairs, and build reports.</p>

            <!-- Example content card -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Getting Started</h5>
                    <p class="card-text">Start by adding devices or users, or import from your existing inventory system.</p>
                </div>
            </div>
        </div>
    </div>
        {% block body %}{% endblock %}
    <script>
        const themeToggle = document.getElementById('themeToggleDropdown');
        const savedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

        function setTheme(mode) {
            document.documentElement.setAttribute('data-bs-theme', mode);
            localStorage.setItem('theme', mode);
            if (themeToggle) {
                themeToggle.checked = (mode === 'dark');
            }
        }

        // Init theme
        if (savedTheme) {
            setTheme(savedTheme);
        } else {
            setTheme(prefersDark ? 'dark' : 'light');
        }

        if (themeToggle) {
            themeToggle.addEventListener('change', () => {
                setTheme(themeToggle.checked ? 'dark' : 'light');
            });
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    </body>
</html>
