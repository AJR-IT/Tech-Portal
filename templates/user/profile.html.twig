{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    <div class="container py-4">
        <h2 class="mb-4">üë§ User Profile</h2>

        <div class="row">
            <!-- Left Column -->
            <div class="col-md-4">
                <!-- User Identity -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ (user.lastName ~ user.firstName) is not null ? 'Identity' }}</h5>
                        <p class="mb-1"><strong>Username:</strong> {{ user.username }}</p>
                        <p class="mb-1"><strong>Email:</strong> {{ user.email}}</p>
                    </div>
                </div>

                <!-- Ticket Statistics -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Ticket Statistics</h5>
                        <p class="mb-1">üé´ Open: 5</p>
                        <p class="mb-1">‚úÖ Resolved: 12</p>
                        <p class="mb-1">‚è≥ Pending: 3</p>
                        <p class="mb-1">üïì Last Login: 2025-07-05 10:32</p>
                        <p class="mb-1">üåê Last IP: 192.168.1.100</p>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-8">
                <!-- Assigned Tickets -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Assigned Tickets</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item ticket-item d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="fw-medium">ticket.titlce</span>
                                    <br>
                                    <small class="text-muted">#id ‚Ä¢ ticket.status</small>
                                </div>
                                <a href="{# {{ path('ticket_show', { id: ticket.id }) }}#}" class="btn btn-sm btn-outline-primary">View</a>
                            </li>
                            <li class="list-group-item ticket-item d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="fw-medium">ticket.titlce</span>
                                    <br>
                                    <small class="text-muted">#id ‚Ä¢ ticket.status</small>
                                </div>
                                <a href="{# {{ path('ticket_show', { id: ticket.id }) }}#}" class="btn btn-sm btn-outline-primary">View</a>
                            </li>
                            <li class="list-group-item ticket-item d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="fw-medium">ticket.titlce</span>
                                    <br>
                                    <small class="text-muted">#id ‚Ä¢ ticket.status</small>
                                </div>
                                <a href="{# {{ path('ticket_show', { id: ticket.id }) }}#}" class="btn btn-sm btn-outline-primary">View</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Edit Profile Accordion -->
                <div class="accordion shadow-sm" id="profileAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="editProfileHeading">
                            <button class="accordion-button collapsed" type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#editProfileCollapse"
                                    aria-expanded="false"
                                    aria-controls="editProfileCollapse">
                                ‚úèÔ∏è Edit Profile
                            </button>
                        </h2>
                        <div id="editProfileCollapse" class="accordion-collapse collapse"
                             aria-labelledby="editProfileHeading">
                            <div class="accordion-body">
                                <form method="post" action="#">
                                    <div class="row mb-3">
                                        <div class="col">
                                            <label for="firstName" class="form-label">First Name</label>
                                            <input type="text" class="form-control" id="firstName" value="John">
                                        </div>
                                        <div class="col">
                                            <label for="lastName" class="form-label">Last Name</label>
                                            <input type="text" class="form-control" id="lastName" value="Doe">
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="localId" class="form-label">Local ID</label>
                                        <input type="text" class="form-control" id="localId" value="EMP-1001">
                                    </div>

                                    <div class="mb-3">
                                        <label for="govtId" class="form-label">Government ID</label>
                                        <input type="text" class="form-control" id="govtId" value="A123456789">
                                    </div>

                                    <div class="mb-3">
                                        <label for="startPage" class="form-label">Default Start Page</label>
                                        <select class="form-select" id="startPage">
                                            <option selected>Dashboard</option>
                                            <option>Tickets</option>
                                            <option>Devices</option>
                                            <option>Reports</option>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="assignedDevice" class="form-label">Assigned Device</label>
                                        <input type="text" class="form-control" id="assignedDevice" value="Dell Latitude 5510">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Groups</label>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" checked id="groupIT">
                                            <label class="form-check-label" for="groupIT">IT Department</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="groupHR">
                                            <label class="form-check-label" for="groupHR">HR Department</label>
                                        </div>
                                    </div>

                                    <hr>
                                    <div class="mb-3">
                                        <label for="newPassword" class="form-label">Change Password</label>
                                        <input type="password" class="form-control" id="newPassword">
                                    </div>

                                    <button type="submit" class="btn btn-primary">üíæ Save Changes</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- End Right Column -->
        </div>
    </div>
{% endblock %}
